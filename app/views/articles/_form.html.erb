<%= form_with(model: article, data: { turbo: true }) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, onchange: "this.form.requestSubmit()" %>
  </div>

  <div>
    <%= form.label :body, style: "display: block", onkeyup: "this.form.requestSubmit()" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<% unless article.new_record? %>
  <%= button_to "Destroy this article", article, method: :delete, turbo: true %>
<% end %>
